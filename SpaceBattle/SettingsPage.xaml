<Window x:Class="SpaceBattle.SettingsPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpaceBattle"
        mc:Ignorable="d"
        Title="SettingsPage" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/SfondoGioco.jpg"/>
        </Grid.Background>
        <Button x:Name="btnIndietro" Content="Indietro" HorizontalAlignment="Center" Margin="0,305,0,0" VerticalAlignment="Top" Height="75" Width="125" Click="btnIndietro_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FF9419FF" Offset="0.7"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
</Window>
